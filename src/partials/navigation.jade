			a(href="mobile-navigation.html")
				img(src="img/icons/gamburger.svg", alt="gamburger")
		.logotype-holder
			a(href="index.html")
				img(src="img/icons/blevogue.svg", alt="BLEVOGUE")
		.controls-holder
			a(href="search.html" data-modal="#search-modal").search-button
				i.search-icon-1
			a(href="login.html" data-modal="#login-modal").login-button
				i.login-icon-1
			a(href="profile.html" data-modal="#profile-modal").profile-button.hidden
				i.profile-image(style="background-image: url(http://40.media.tumblr.com/355c4c5196bf6c05e1a37093a7682d09/tumblr_o3h2h81gst1slisbmo1_1280.jpg)")
